<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFeedFragment">

    <fragment
        android:id="@+id/mainFeedFragment"
        android:name="com.example.finalproject.fragments.MainFeedFragment"
        android:label="Main Feed"
        tools:layout="@layout/fragment_main_feed">
        <action
            android:id="@+id/action_mainFeedFragment_to_uploadRecommendationFragment"
            app:destination="@id/uploadRecommendationFragment" />
        <action
            android:id="@+id/action_mainFeedFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/uploadRecommendationFragment"
        android:name="com.example.finalproject.fragments.UploadRecommendationFragment"
        android:label="Upload Recommendation"
        tools:layout="@layout/fragment_upload_recommendation">
        <action
            android:id="@+id/action_uploadRecommendationFragment_to_mainFeedFragment"
            app:destination="@id/mainFeedFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.finalproject.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_mainFeedFragment"
            app:destination="@id/mainFeedFragment" />
    </fragment>

</navigation>