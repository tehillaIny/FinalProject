<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="recommendation"
            type="com.example.finalproject.models.Recommendation" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Place Name -->
            <TextView
                android:id="@+id/textViewRestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recommendation.restaurantName}"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                tools:text="Restaurant Name" />

            <!-- Location -->
            <TextView
                android:id="@+id/textViewAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recommendation.address}"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                tools:text="Address" />

            <!-- User Name -->
            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recommendation.userId}"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:paddingBottom="16dp"
                tools:text="Uploaded by: Username" />

            <!-- Main Image -->
            <ImageView
                android:id="@+id/imageViewMain"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/placeholder_image" />

            <!-- Description -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recommendation.description}"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                tools:text="Description of the place..." />

            <!-- Gallery of Additional Photos -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:id="@+id/galleryLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Additional images will be added here dynamically -->

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Optional: Add comments section or like button here -->

        </LinearLayout>
    </ScrollView>
</layout>
